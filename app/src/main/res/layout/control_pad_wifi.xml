<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10sp"
        android:gravity="center">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(這裡顯示這是第一台車的遙控)"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250sp"
        android:gravity="center"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <SeekBar
            android:id="@+id/SeekBar_Left"
            android:layout_width="240dp"
            android:layout_height="60sp"
            android:layout_marginTop="0sp"
            android:layout_marginRight="-10sp"
            android:background="@drawable/throttle"
            android:rotation="270"
            android:thumbTint="@color/white"
            tools:layout_editor_absoluteX="83dp"
            tools:layout_editor_absoluteY="80dp"
            android:max="8"/>

        <LinearLayout
            android:layout_width="250sp"
            android:layout_height="300sp"
            android:gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20sp"
                    android:text="左檔位:0"/>
                <TextView
                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="右檔位:0"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:gravity="center"
                android:orientation="horizontal">

                <Switch
                    android:id="@+id/forward_Switch"
                    android:layout_width="wrap_content"
                    android:layout_height="40sp"
                    android:text="前檔"/>
                <Switch
                    android:id="@+id/neutral_Switch"
                    android:layout_width="wrap_content"
                    android:layout_height="40sp"
                    android:text="空檔"/>
                <Switch
                    android:id="@+id/backward_Switch"
                    android:layout_width="wrap_content"
                    android:layout_height="40sp"
                    android:text="後檔"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:gravity="center"
                android:orientation="horizontal">

                <Switch
                    android:id="@+id/Light_Switch"
                    android:layout_width="wrap_content"
                    android:layout_height="40sp"
                    android:text="車燈" />

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="40sp"
                    android:text="ABCCC" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:gravity="center"
                android:orientation="horizontal">

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="40sp"
                    android:text="ggg" />

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="40sp"
                    android:text="ABBBB" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:gravity="center"
                android:orientation="horizontal">

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="40sp"
                    android:text="ggggg" />

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="40sp"
                    android:text="ABBBB" />
            </LinearLayout>
        </LinearLayout>

        <SeekBar
            android:id="@+id/SeekBar_Right"
            android:layout_width="240dp"
            android:layout_height="60sp"
            android:layout_marginTop="0sp"
            android:layout_marginLeft="-10sp"
            android:background="@drawable/throttle"
            android:thumbTint="@color/white"
            android:rotation="270"
            tools:layout_editor_absoluteX="317dp"
            tools:layout_editor_absoluteY="80dp"
            android:max="8"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70sp"
        android:orientation="horizontal"
        android:layout_marginTop="10sp"
        android:gravity="center">

        <WebView
            android:id="@+id/webView"
            android:layout_width="0sp"
            android:layout_height="0sp">
        </WebView>

        <WebView
            android:id="@+id/webView2"
            android:layout_width="0sp"
            android:layout_height="0sp">
        </WebView>

        <Switch
            android:id="@+id/Engine_Switch"
            android:layout_width="110sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:layout_marginStart="15sp"
            android:textSize="20sp"
            android:text="總動力"
            />

        <ImageButton
            android:id="@+id/rotate_Btn_Unclock"
            style="@style/RotateButton"
            android:scaleX="0.85"
            android:scaleY="0.85"
            android:layout_marginLeft="50sp"
            android:layout_marginRight="20sp"
            android:src="@drawable/rotate_shape_unclock"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="超信地迴旋"
            android:textSize="25sp"/>

        <ImageButton
            android:id="@+id/rotate_Btn_clock"
            style="@style/RotateButton"
            android:scaleX="0.85"
            android:scaleY="0.85"
            android:layout_marginRight="175sp"
            android:layout_marginLeft="20sp"
            android:src="@drawable/rotate_shape_clock" />



    </LinearLayout>





</LinearLayout>
