<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/bg1_3">





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">
        <!--margin是距離其他物件多少-->

        <Button
            android:id="@+id/WIFI_Btn"
            android:text="@string/wifi_mode"
            style="@style/SmsButton"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            tools:layout_editor_absoluteX="121dp"
            tools:layout_editor_absoluteY="281dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="選擇通訊方式"
            android:textColor="@color/white"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="260dp"
            tools:layout_editor_absoluteY="292dp" />

        <Button
            android:id="@+id/Bluetooth_Btn"
            android:text="@string/bluetooth_mode"
            style="@style/SmsButton"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            tools:layout_editor_absoluteX="423dp"
            tools:layout_editor_absoluteY="281dp" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>